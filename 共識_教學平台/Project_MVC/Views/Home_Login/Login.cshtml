@model Project_MVC.Models.User

@{
    ViewData["Title"] = "共識 - 會員登入";
    var wrongAns = ViewBag.wrong;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" asp-append-version="true" />

<style>
    #LoginPhoto {
        max-height: 40vh;
        max-width: auto;
    }
</style>


<div class="container paddingtopspacing">
    <h1 class="text-center"><strong>會員登入</strong></h1>
    <div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-2 p-4">
        <div class="col col-rows-1">
            <img src="~/images/LoginPhoto.jpg" id="LoginPhoto">
        </div>
        <div class="col col-rows-1">
            <form method="post" action="Login">
                <div class="form-group">
                    <label class="control-label" for="UserEmail">信箱</label>
                    <input class="form-control" type="text" id="UserEmail"
                           name="UserEmail" placeholder="請輸入信箱" value="" />
                </div>
                <div class="form-group">
                    <label class="control-label" for="Password">密碼</label>
                    <div class="input-group">
                        <input class="form-control" type="password" id="Password" name="Password" value="" placeholder="請輸入密碼" required />
                        <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                            <i class="far fa-eye"></i>
                        </button>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="確定" class="btn btn-primary" />
                    <a href="/Home/Index" class="btn btn-danger">取消</a>
                    <a href="/Home_Login/Create" class="btn btn-success">前往註冊</a>
                </div>
                <span class="text-success"><h3>@ViewBag.RegisterSucceed</h3></span>
                <span class="text-danger"><h3>@ViewBag.WrongWarning</h3></span>
                <span class="text-danger"><h3>@ViewBag.PleaseLoginDirectly</h3></span>

            </form>
        </div>
    </div>

</div>



<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
<script>
    @*密碼眼睛效果*@
        document.getElementById("togglePassword").addEventListener("mousedown", function () {
            var passwordInput = document.getElementById("Password");
            passwordInput.type = "text";
        });

    document.getElementById("togglePassword").addEventListener("mouseup", function () {
        var passwordInput = document.getElementById("Password");
        passwordInput.type = "password";
    });
</script>
