@model Project_MVC.Models.Post
@{
    ViewData["Title"] = "知識共享網 - 上傳文章";
}
@*發文專區*@
<!-- 發文區 開始 -->
<div id="inputlist" class="container-fluid align-items-center paddingtopspacing">
    <!-- 側邊攔 開始 -->
    <aside id="sidebar" class="sidebar">
        <!-- 側邊欄位切換 -->
        <i class="px-3 bi bi-list toggle-sidebar-btn"></i>
        <!-- 列表 -->
        <ul class="sidebar-nav" id="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="" asp-controller="Home_Post" asp-action="Post_Index">
                    <i class="bi bi-grid"></i>
                    <span>討論區首頁</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="" asp-controller="Home_Post" asp-action="Post_UserArticle">
                    <i class="bi bi-grid"></i>
                    <span>我的文章</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-area="" asp-controller="Home_Post" asp-action="Post_UserReserve">
                    <i class="bi bi-grid"></i>
                    <span>我的收藏</span>
                </a>
            </li>
        </ul>


    </aside>
    <!-- 側邊攔 結束-->
    <!-- 編輯區 開始 -->

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>


    <script>
        $(document).ready(function () {
            // 初始化Summernote編輯器
           // $('#summernote').summernote();

            $('#summernote').summernote({
                placeholder: "請輸入文章內容",
                tabsize: 2,
                height: 190
            });
        });
    </script>


    <div class="container">

        <div class="row justify-content-center py-4">
            <h2 style="margin-top: 10px; text-align: center ; font-weight: bold;">發文填寫資料區</h2>
            <hr>
            <div class="col-sm-6" style="margin:10px;">
                <form style="margin-left: 10px;" asp-action="Post_InputData" asp-controller="Home_Post" enctype="multipart/form-data">

                    <div class="form-group">
                        <label for="select" style="font-weight: bold; margin-bottom: 7px;"> 請選擇文章分類</label>
                        <select id="select" name="PostCategory" class="form-select" aria-label=".form-select-lg example form-control">
                            <option value="純發文章">純發文章</option>
                            <option value="交換技能">交換技能</option>
                            <option value="找老師">找老師</option>
                            <option value="找學生">找學生</option>
                        </select>
                    </div> <br>


                    <div class="form-group">
                        <label for="title" class="form-label" style="font-weight: bold;">文章標題</label>
                        <input type="text" class="form-control" id="title" name="PostTitle">
                    </div>
                    <br>


                    <div class="form-group">
                        <label for="title" class="form-label" style="font-weight: bold;">文章封面照</label>
                        <input type="file" name="PostrImgUrls" class="form-control" />

                    </div>
                    <br>




                   


                    <div class="form-group">
                        <label for="PostContent" class="form-label" style="font-weight: bold;">發文內容</label>
                        <textarea id="summernote" name="PostContent" rows="5"></textarea>
 
                    </div>

                    <br>
                    <div class="form-group">

                        <label for="tags">關鍵字標籤1：</label>
                        <input type="text" class="form-control" id="tags" name="PostTag1">
                        <label for="tags">關鍵字標籤2：</label>
                        <input type="text" class="form-control" id="tags" name="PostTag2">
                        <label for="tags">關鍵字標籤3：</label>
                        <input type="text" class="form-control" id="tags" name="PostTag3">
                    </div>

                    <a href="./pages-index.html">
                        <button type="submit" class="btn btn-dark" style="margin-top: 10px;">文章發送</button>
                    </a>


                </form>
            </div>

        </div>

    </div>
    <!-- 編輯區 結束 -->
</div>
<!-- 發文區 結束 -->

<!-- 回到最上層 開始 -->
<a href="#" class="back-to-top d-flex align-items-center justify-content-center">
    <i class="bi bi-arrow-up-short"></i>
</a>
<!-- 回到最上層 結束 -->

<script>
    //這裡可以放：當編輯區(欄位textbox) 不是NULL。
    //若點選 側邊攔 的 <a> or Layout navbar 的 <a>，
    //會跳出 視窗(確認是否要離開)
</script>