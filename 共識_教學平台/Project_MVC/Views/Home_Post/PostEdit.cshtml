@model Project_MVC.Models.Post

@{
    ViewData["Title"] = "知識共享網 - 文章編輯";
}

<br>
<br>
<br>
<br>


<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>


<script>
    $(document).ready(function () {
        // 初始化Summernote編輯器
        // $('#summernote').summernote();

        $('#summernote').summernote({
            placeholder: "請輸入文章內容",
            tabsize: 2,
            height: 190
        });
    });
</script>



<div class="container" > 
  
    <div class="row justify-content-center">

        <h3 style="text-align:center"><b>文章修改</b></h3>

        <hr/>
        <div class="col-md-7">
            <form asp-action="PostEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PostId" />
                <div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <input type="text" value="@Model.UserId" class="form-control" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostCategory" class="control-label"></label>
                    <input asp-for="PostCategory" class="form-control" />
                    <span asp-validation-for="PostCategory" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostTitle" class="control-label"></label>
                    <input asp-for="PostTitle" class="form-control" />
                    <span asp-validation-for="PostTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostPublishTime" class="control-label"></label>
                    <input asp-for="PostPublishTime" class="form-control" />
                    <span asp-validation-for="PostPublishTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostContent" class="control-label"></label>
                    <textarea asp-for="PostContent" class="form-control" id="summernote" rows="5">@Html.Raw(Model.PostContent)</textarea>
                    <span asp-validation-for="PostContent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostTag1" class="control-label"></label>
                    <input asp-for="PostTag1" class="form-control" />
                    <span asp-validation-for="PostTag1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostTag2" class="control-label"></label>
                    <input asp-for="PostTag2" class="form-control" />
                    <span asp-validation-for="PostTag2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostTag3" class="control-label"></label>
                    <input asp-for="PostTag3" class="form-control" />
                    <span asp-validation-for="PostTag3" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HiddenPost" class="control-label"></label>
                    <input asp-for="HiddenPost" class="form-control" />
                    <span asp-validation-for="HiddenPost" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostrImgUrl" class="control-label"></label>
                    <input type="text" name="PostrImgUrl" class="form-control" value="@Model.PostrImgUrl" />
                    <span asp-validation-for="PostrImgUrl" class="text-danger"></span>
                </div>


                <div class="form-group  ">
                    <input type="submit" value="確定" class="btn btn-dark my-3" />
                    <a asp-controller="Home_Post" asp-action="Post_UserArticle" class="btn btn-dark my-3">取消</a>
                </div>



            </form>


        </div>
    </div>



</div>


