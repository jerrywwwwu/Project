@model IEnumerable<Project_MVC.Models.UserTeacher>

@{
   

    var userid = ViewBag.userIDnumber;}

<br>
<h1>老師明細</h1>


<table class="table">
    <thead>
        <tr>
            <th>
               關於我
            </th>
            <th>
                我的專長
