@model Project_MVC.Models.UserTeacher

@{
    ViewData["Title"] = "Edit";
    
     var userid = ViewBag.userIDnumber;
}

<h1>Edit</h1>

<h4>UserTeacher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Home_Course" asp-action="TeacherDataEdit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TeacherId" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label">使用者編號</label>
                <input type="text" name="UserId" value="@userid">
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserIntro1" class="control-label">關於我</label>
                <input asp-for="UserIntro1" class="form-control" />
                <span asp-validation-for="UserIntro1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserIntro2" class="control-label">我的專長</label>
                <input asp-for="UserIntro2" class="form-control" />
                <span asp-validation-for="UserIntro2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserBgimage" class="control-label"></label>
                <input asp-for="UserBgimage" class="form-control" />
                <span asp-validation-for="UserBgimage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="TeacherData">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
